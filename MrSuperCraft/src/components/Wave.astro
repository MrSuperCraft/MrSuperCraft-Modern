<style>
  .soundwave-container {
    display: flex;
    align-items: center;
    gap: 5px;
    height: 100px; /* Set the desired height of the soundwave container */
    overflow: hidden;
  }

  .soundwave {
    width: 15px;
    height: 5px;
    background-color: #3490dc;
    border-radius: 20px;
    animation: waveloader 0.9s linear alternate infinite;
  }

  @keyframes waveloader {
    to {
      height: 100px; /* Adjust the maximum height of the wave */
    }
  }

  .soundwave:nth-child(1) {
    animation-delay: 0s;
  }
  .soundwave:nth-child(2) {
    animation-delay: 0.5s;
  }
  .soundwave:nth-child(3) {
    animation-delay: 1s;
  }
  .soundwave:nth-child(4) {
    animation-delay: 1.5s;
  }
  .soundwave:nth-child(5) {
    animation-delay: 2s;
  }
  .soundwave:nth-child(6) {
    animation-delay: 2.5s;
  }
  .soundwave:nth-child(7) {
    animation-delay: 3s;
  }
</style>
