<style>
  #poll-container {
    max-width: 400px;
    margin: auto;
    padding: 1rem;
    border: 1px solid #ccc;
    border-radius: 8px;
    background-color: #f9f9f9;
  }

  .bar {
    height: 20px;
    margin: 4px 0;
    background-color: #3490dc;
    transition: width 0.5s ease;
  }
</style>

<div id="poll-container" class="mx-auto p-4 text-black">
  <h3 class="text-xl font-semibold mb-4">Vote for Your Favorite:</h3>
  <form id="poll-form">
    <label class="block mb-2">
      <input type="radio" name="poll-option" value="option1" class="mr-2" />
       Option 1
    </label>
    <label class="block mb-2">
      <input type="radio" name="poll-option" value="option2" class="mr-2" />
       Option 2
    </label>
    <!-- Add more options as needed -->
    <button
      id="polls-submit"
      type="button"
      class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 focus:outline-none"
      >Submit Vote</button
    >
  </form>
  <div id="vote-result"></div>
</div>
